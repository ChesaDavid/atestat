<?xml version="1.0" encoding="utf-8"?
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="345px"
        android:layout_height="120px"
        android:layout_marginLeft="365px"
        android:text="@string/title"
        android:textSize="34dp"
        android:textStyle="bold|italic"
        android:translationZ="12dp"
        android:layout_marginTop="50px"/>

    <ImageButton
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calculatoricon"
        android:fadingEdge="horizontal"
        android:rotationX="0"
        android:scaleType="fitStart"
        android:layout_marginTop="960px"
        android:layout_marginLeft="100px"/>

    <ImageView
        android:layout_width="1080px"
        android:layout_height="900px"
        android:src="@drawable/graduationcap"
        android:translationZ="-12dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="810px"
        android:text="LogIn" />
    <TextView
        android:layout_width="300px"
        android:layout_height="90px"
        android:textSize="50px"
        android:layout_marginLeft="66px"
        android:text="Calculator"
        android:layout_marginTop="1150px"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>